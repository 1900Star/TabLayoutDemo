<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/scroll_root_view"
    android:layout_marginStart="1dp"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_work_excel_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:maxWidth="60dp"
        android:minWidth="60dp"
        android:text="工单ID"
        android:textSize="16sp" />


    <com.yibao.tablayoutdemo.view.ScrollItemView
        android:id="@+id/scroll_view_excel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_work_excel_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:maxWidth="80dp"
                android:text="工单标题"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_work_excel_desc"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:maxLines="5"
                android:text="简要内容"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_fault"
                style="@style/Tv9"
                android:text="故障类型" />

            <TextView
                android:id="@+id/tv_work_excel_content"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:maxLines="5"
                android:singleLine="false"
                android:text="故障描述"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_fixed_alarm"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:maxLines="5"
                android:singleLine="false"
                android:text="现场实际故障"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_flag"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="处理状态"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="执行情况"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_rode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:gravity="center"

                android:maxWidth="60dp"
                android:minWidth="60dp"
                android:text="所属标段"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:ellipsize="none"
                android:gravity="center"
                android:maxWidth="60dp"
                android:maxLines="5"
                android:minWidth="60dp"
                android:singleLine="false"
                android:text="AAAA"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_responsibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:ellipsize="none"
                android:gravity="center"
                android:maxWidth="60dp"
                android:maxLines="8"
                android:minWidth="60dp"
                android:singleLine="false"
                android:text="BBBBB"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_work_excel_start_time"
                style="@style/Tv9"
                android:minWidth="80dp"
                android:text="CCCC" />

            <TextView
                android:id="@+id/tv_work_excel_end_time"
                style="@style/Tv9"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:minWidth="80dp"
                android:text="DDDD" />

            <TextView
                style="@style/Tv9"
                android:layout_marginEnd="15dp" />


        </LinearLayout>
    </com.yibao.tablayoutdemo.view.ScrollItemView>
</LinearLayout>
